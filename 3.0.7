 <html lang="en" onkeypress="jump();document.getElementById('sound1').play()">
  <html lang="en" onclick="jump();document.getElementById('sound1').play()">
  
    <meta charset="UTF-8">
    <title>Box Buddies</title>
    <link rel="stylesheet" href="style.css">
</head>
<body id="body">
    <div class="game">
        <div id="character"></div>
        <div id="block"></div>
    </div>
    <p id="scoretext">Score: <span id="scoreSpan"></span></p>
    <h2 id="warning-text">Click Or Press SpaceBar to Jump! If you are on a phone turn it horizontal!</h2>
</body>
<script> var character = document.getElementById("character");
var block = document.getElementById("block");
var counter=0;
function jump(){
    if(character.classList == "animate"){return}
    character.classList.add("animate");
    setTimeout(function(){
        character.classList.remove("animate");
    },300);
}
var checkDead = setInterval(function() {
    let characterTop = parseInt(window.getComputedStyle(character).getPropertyValue("top"));
    let blockLeft = parseInt(window.getComputedStyle(block).getPropertyValue("left"));
    if(blockLeft<20 && blockLeft>-20 && characterTop>=130){
        block.style.animation = "none";
        alert("Game Over. score: "+Math.floor(counter/100));
        counter=0;
        block.style.animation = "block 1s infinite linear";
    }else{
        counter++;
        document.getElementById("scoreSpan").innerHTML = Math.floor(counter/100);
    }
}, 
10);</script>

<audio src="https://bit.ly/37G6nl2" autoplay="true" loop="true">
<style> *{
    padding: 0;
    margin: 0;
    overflow-x: hidden;
}
.game{
    width: 700px;
    height: 200px;
    border: 10px solid rgb(86, 211, 28);
    margin: auto;
    background-color: rgb(0, 0, 0);
    border-radius: 1%;
}
#character{
    width: 20px;
    height: 50px;
    background-color: rgb(31, 223, 191);
    position: relative;
    top: 150px;
}
.animate{
    animation: jump 0.3s linear; 
}
@keyframes jump{
    0%{top: 150px;}
    30%{top: 100px;}
    70%{top: 100px;}
    100%{top: 150px;}
}
#body{
    background-color:rgb(0, 0, 0)
}

#block{
    background-color: rgb(233, 21, 240);
    width: 20px;
    height: 20px;
    position: relative;
    top: 130px;
    left: 500px;
    right: 1000;
    bottom: 600px;
    animation: block 1s infinite linear;
}
@keyframes block{
    0%{left: 700px}
    100%{left: -20px}
}
p{
    text-align: center;
    font-family: Verdana, Geneva, Tahoma, sans-serif ;
    font-weight: 100; 
    font-size: x-large;
}
#scoretext{
    color: rgb(252, 252, 252)
}

#warning-text{
    color: white;
}</style>
